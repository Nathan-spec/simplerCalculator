<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">




        <TextView
            android:id="@+id/Placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text=""
            android:layout_marginTop="40sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:id="@+id/answer"
        android:text=""
        android:textSize="35sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_button"
            style="@style/ActionButtonStyle"
            android:text="C"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/startBracket"
            android:text="("/>
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/closeBracket"
            android:text=")"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/divideButton"
            android:text="/"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/number_onebtn"
            android:text="1"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/number_twobtn"
            android:text="2"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/number_threebtn"
            android:text="3"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/plus_btn"
            android:text="+"
            />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/number_fourbtn"
            android:text="4"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/number_fivebtn"
            android:text="5"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/number_sixbtn"
            android:text="6"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/multiplybtn"
            android:text="x"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/NumberButtonStyle"
            android:text="7"
            android:id="@+id/number_sevenbtn"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:text="8"
            android:id="@+id/number_eightbtn"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:text="9"
            android:id="@+id/number_ninebtn"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:text="-"
            android:id="@+id/number_minusbtn"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        >
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/zerobtn"
            android:text="0"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/pointtbn"
            android:text="."
            android:textSize="10sp"
            />
        <TextView
            style="@style/NumberButtonStyle"
            android:id="@+id/delete_btn"
            android:text="âŒ«"
            />
        <TextView
            style="@style/ActionButtonStyle"
            android:id="@+id/equals_btn"
            android:text="="
            />
    </LinearLayout>
</LinearLayout>